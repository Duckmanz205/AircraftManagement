
@{
    var isLoggedIn = Session["UserName"] != null;
    var userName = Session["UserName"] as string;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SkyBooking - Đặt vé máy bay</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
</head>
<body class="bg-gray-50 font-sans">
    <!-- Header -->
    <header class="bg-white shadow-sm border-b border-gray-100">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="flex justify-between items-center h-16">
                <!-- Logo -->
                <div class="flex items-center">
                    <i class="fas fa-plane text-blue-600 text-2xl mr-3"></i>
                    <span class="text-2xl font-bold text-blue-600">SkyBooking</span>
                </div>



                if (userName != null)
                {
                    <!-- Navigation Menu -->
                    <nav class="hidden md:flex space-x-8">
                        <a href="#" onclick="setActiveMenu(this)" class="navbar-item text-blue-600 active font-medium border-b-2 border-blue-600 pb-1">Trang chủ</a>
                        <a href="#" onclick="setActiveMenu(this)" class="navbar-item text-gray-700 hover:text-blue-600 transition-colors">Vé của tôi</a>
                        <a href="#" onclick="setActiveMenu(this)" class="navbar-item text-gray-700 hover:text-blue-600 transition-colors">Check-in</a>
                        <a href="#" onclick="setActiveMenu(this)" class="navbar-item text-gray-700 hover:text-blue-600 transition-colors">Liên hệ</a>
                    </nav>

                    <!-- User Profile Dropdown -->
                    <div class="flex items-center space-x-4">
                        <div class="relative group">
                            <button class="flex items-center space-x-3 bg-gray-50 hover:bg-gray-100 px-4 py-2 rounded-lg transition-colors">
                                <img src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?w=40&h=40&fit=crop&crop=face"
                                     alt="Avatar" class="w-8 h-8 rounded-full object-cover">
                                <div class="text-left hidden sm:block">
                                    <p class="text-sm font-medium text-gray-800">Nguyễn Văn A</p>
                                    <p class="text-xs text-gray-500">Premium Member</p>
                                </div>
                                <i class="fas fa-chevron-down text-gray-500 text-sm"></i>
                            </button>

                            <!-- Dropdown Menu -->
                            <div class="absolute right-0 mt-2 w-56 bg-white rounded-lg shadow-lg border border-gray-100 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200 z-50">
                                <div class="py-2">
                                    <div class="px-4 py-3 border-b border-gray-100">
                                        <p class="text-sm font-medium text-gray-800">Nguyễn Văn A</p>
                                        <p class="text-xs text-gray-500">nguyenvana@email.com</p>
                                    </div>
                                    <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                        <i class="fas fa-user mr-3 text-gray-400"></i>Hồ sơ cá nhân
                                    </a>
                                    <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                        <i class="fas fa-ticket-alt mr-3 text-gray-400"></i>Vé của tôi
                                    </a>
                                    <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                        <i class="fas fa-heart mr-3 text-gray-400"></i>Yêu thích
                                    </a>
                                    <a href="#" class="flex items-center px-4 py-2 text-sm text-gray-700 hover:bg-gray-50">
                                        <i class="fas fa-cog mr-3 text-gray-400"></i>Cài đặt
                                    </a>
                                    <div class="border-t border-gray-100 mt-2 pt-2">
                                        <a href="#" class="flex items-center px-4 py-2 text-sm text-red-600 hover:bg-red-50">
                                            <i class="fas fa-sign-out-alt mr-3"></i>Đăng xuất
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Mobile Menu Button -->
                        <button class="md:hidden text-gray-700">
                            <i class="fas fa-bars text-xl"></i>
                        </button>
                    </div>
                }
                else
                {
                    <!-- Navigation Menu -->
                    <nav class="hidden md:flex space-x-8">
                        <a href="#" class="text-blue-600 font-medium border-b-2 border-blue-600 pb-1">Trang chủ</a>
                        <a href="#" class="text-gray-700 hover:text-blue-600 transition-colors">Vé của tôi</a>
                        <a href="#" class="text-gray-700 hover:text-blue-600 transition-colors">Check-in</a>
                        <a href="#" class="text-gray-700 hover:text-blue-600 transition-colors">Liên hệ</a>
                    </nav>

                    <!-- Nút đăng nhập -->
                    <div class="hidden md:block">
                        <button onclick="window.location.href='@Url.Action("DangNhap","User")'" class="bg-blue-600 text-white px-4 py-2 rounded-md text-sm font-medium hover:bg-gray-700">
                            Đăng nhập
                        </button>
                    </div>
                }


            </div>
        </div>
    </header>
    <!-- Hero Section with Search -->
    <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-12 md:py-20">
        @RenderBody()
    </section>

    <!-- Footer -->
    <footer class="bg-gray-800 text-white py-12">
        <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
            <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
                <!-- Company Info -->
                <div>
                    <div class="flex items-center mb-4">
                        <i class="fas fa-plane text-blue-400 text-2xl mr-3"></i>
                        <span class="text-2xl font-bold">SkyBooking</span>
                    </div>
                    <p class="text-gray-400 mb-4">Đặt vé máy bay dễ dàng, an toàn và tiện lợi nhất.</p>
                    <div class="flex space-x-4">
                        <i class="fab fa-facebook text-blue-400 text-xl cursor-pointer hover:text-blue-300"></i>
                        <i class="fab fa-twitter text-blue-400 text-xl cursor-pointer hover:text-blue-300"></i>
                        <i class="fab fa-instagram text-blue-400 text-xl cursor-pointer hover:text-blue-300"></i>
                    </div>
                </div>

                <!-- Quick Links -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Liên kết nhanh</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Trang chủ</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Vé của tôi</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Check-in</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Khuyến mãi</a></li>
                    </ul>
                </div>

                <!-- Support -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Hỗ trợ</h3>
                    <ul class="space-y-2">
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Chính sách bảo mật</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Điều khoản sử dụng</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">Hỗ trợ khách hàng</a></li>
                        <li><a href="#" class="text-gray-400 hover:text-white transition-colors">FAQ</a></li>
                    </ul>
                </div>

                <!-- Contact -->
                <div>
                    <h3 class="text-lg font-semibold mb-4">Liên hệ</h3>
                    <div class="space-y-2">
                        <p class="text-gray-400 flex items-center">
                            <i class="fas fa-phone mr-2"></i>1900 1234
                        </p>
                        <p class="text-gray-400 flex items-center">
                            <i class="fas fa-envelope mr-2"></i>support@skybooking.vn
                        </p>
                        <p class="text-gray-400 flex items-center">
                            <i class="fas fa-map-marker-alt mr-2"></i>Hà Nội, Việt Nam
                        </p>
                    </div>
                </div>
            </div>

            <div class="border-t border-gray-700 mt-8 pt-8 text-center">
                <p class="text-gray-400">&copy; 2024 SkyBooking. Tất cả quyền được bảo lưu.</p>
            </div>
        </div>
    </footer>
    <script>
        function setActiveMenu(element) {
            // Remove active class from all items
            document.querySelectorAll('.navbar-item').forEach(item => {
                item.classList.remove('active', 'font-medium', 'border-b-2', 'border-blue-600', 'pb-1', 'text-blue-600');
                item.classList.add('text-gray-700');
            });

            // Add active class to clicked item
            element.classList.add('active', 'font-medium', 'border-b-2', 'border-blue-600', 'pb-1', 'text-blue-600');
            element.classList.remove('text-gray-700');

            // Update page title based on menu
            const pageTitle = document.getElementById('pageTitle');
            const pageDescription = document.getElementById('pageDescription');
            const menuText = element.querySelector('span').textContent;

            const menuTitles = {
                'Trang Chủ': {
                    title: 'Trang Chủ',
                    description: 'Tổng quan hệ thống đặt vé'
                },
                'Vé của tôi': {
                    title: 'Vé của tôi',
                    description: 'Người dùng có thể xem vé đã sở hữu'
                },
                'Check-In': {
                    title: 'Check-In',
                    description: 'Cho người dùng check-in'
                },
                'Liên Hệ': {
                    title: 'Liên Hệ',
                    description: ''
                }
            };

            if (menuTitles[menuText]) {
                pageTitle.textContent = menuTitles[menuText].title;
                pageDescription.textContent = menuTitles[menuText].description;
            }

        }
    </script>
</body>
</html>
