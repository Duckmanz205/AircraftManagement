@{ 
    Layout = "~/Views/Shared/_LayoutUser.cshtml";
}
    <div class="container mx-auto px-4 py-8 max-w-2xl">
        <!-- Header -->
        <div class="text-center mb-8">
            <h1 class="text-3xl md:text-4xl font-bold text-gray-800 mb-2">Check-in Online</h1>
            <p class="text-gray-600">Thực hiện check-in nhanh chóng và tiện lợi</p>
        </div>

        <!-- Form Tra cứu -->
        <div id="search-form" class="bg-white rounded-lg shadow-lg p-6 md:p-8">
            <div class="mb-6">
                <h2 class="text-xl font-semibold text-gray-800 mb-4">Tra cứu thông tin chuyến bay</h2>
                <div class="space-y-4">
                    <div>
                        <label class="block text-sm font-medium text-gray-700 mb-2">Mã vé</label>
                        <input type="text" placeholder="Nhập mã vé để tiếp tục" class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent">
                    </div>
                    <button onclick="showFlightInfo()" class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200">
                        Tra cứu
                    </button>
                </div>
            </div>
        </div>

        <!-- Thông tin chuyến bay -->
        <div id="flight-info" class="hidden bg-white rounded-lg shadow-lg p-6 md:p-8">
            <div class="mb-6">
                <div class="flex items-center justify-between mb-4">
                    <h2 class="text-xl font-semibold text-gray-800">Thông tin chuyến bay</h2>
                    <button onclick="goBack()" class="text-gray-500 hover:text-gray-700">
                        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
                        </svg>
                    </button>
                </div>

                <div class="bg-blue-50 rounded-lg p-4 mb-6">
                    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                        <div>
                            <p class="text-sm text-gray-600">Chuyến bay</p>
                            <p class="font-semibold text-lg">VN123</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Tuyến đường</p>
                            <p class="font-semibold">Hà Nội → TP.HCM</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Ngày bay</p>
                            <p class="font-semibold">15/12/2024</p>
                        </div>
                        <div>
                            <p class="text-sm text-gray-600">Giờ khởi hành</p>
                            <p class="font-semibold">14:30</p>
                        </div>
                    </div>
                </div>

                <div class="space-y-4 mb-6">
                    <div class="border-b pb-4">
                        <h3 class="font-semibold text-gray-800 mb-2">Thông tin hành khách</h3>
                        <p class="text-gray-700">Nguyễn Văn An</p>
                    </div>

                    <div class="border-b pb-4">
                        <h3 class="font-semibold text-gray-800 mb-2">Số ghế</h3>
                        <p class="text-gray-700">12A</p>
                    </div>

                    <div>
                        <h3 class="font-semibold text-gray-800 mb-2">Hành lý</h3>
                        <div class="text-gray-700">
                            <p>• Hành lý xách tay: 7kg</p>
                            <p>• Hành lý ký gửi: 20kg</p>
                        </div>
                    </div>
                </div>

                <button onclick="confirmCheckin()" class="w-full bg-green-600 hover:bg-green-700 text-white font-semibold py-3 px-6 rounded-lg transition duration-200">
                    Xác nhận Check-in
                </button>
            </div>
        </div>

        <!-- Boarding Pass -->
        <div id="boarding-pass" class="hidden bg-white rounded-lg shadow-lg overflow-hidden">
            <<div class="max-w-md mx-auto">
                <!-- Boarding Pass Card -->
                <div class="bg-white rounded-2xl shadow-xl overflow-hidden border border-gray-200">
                    <!-- Header -->
                    <div class="bg-gradient-to-r from-blue-600 to-blue-700 px-6 py-4">
                        <div class="flex items-center justify-between">
                            <div class="text-white">
                                <h1 class="text-lg font-bold">BOARDING PASS</h1>
                                <p class="text-blue-100 text-sm">Thẻ Lên Máy Bay</p>
                            </div>
                            <i class="fas fa-plane text-white text-2xl"></i>
                        </div>
                    </div>

                    <!-- Main Content -->
                    <div class="p-6">
                        <!-- Flight Info -->
                        <div class="mb-6">
                            <div class="flex justify-between items-center mb-4">
                                <div>
                                    <p class="text-gray-500 text-sm font-medium">Mã Chuyến Bay</p>
                                    <p class="text-2xl font-bold text-gray-900">VN123</p>
                                </div>
                                <div class="text-right">
                                    <p class="text-gray-500 text-sm font-medium">Ngày Bay</p>
                                    <p class="text-lg font-semibold text-gray-900">15/12/2024</p>
                                </div>
                            </div>

                            <!-- Route -->
                            <div class="flex items-center justify-between mb-4">
                                <div class="text-center">
                                    <p class="text-gray-500 text-sm">Từ</p>
                                    <p class="text-xl font-bold text-gray-900">HAN</p>
                                    <p class="text-gray-600 text-sm">Hà Nội</p>
                                </div>
                                <div class="flex-1 mx-4">
                                    <div class="flex items-center justify-center">
                                        <div class="h-px bg-gray-300 flex-1"></div>
                                        <i class="fas fa-plane text-blue-600 mx-2"></i>
                                        <div class="h-px bg-gray-300 flex-1"></div>
                                    </div>
                                    <p class="text-center text-gray-500 text-xs mt-1">2h 15m</p>
                                </div>
                                <div class="text-center">
                                    <p class="text-gray-500 text-sm">Đến</p>
                                    <p class="text-xl font-bold text-gray-900">SGN</p>
                                    <p class="text-gray-600 text-sm">TP.HCM</p>
                                </div>
                            </div>
                        </div>

                        <!-- Passenger Info -->
                        <div class="border-t border-gray-200 pt-4 mb-6">
                            <div class="grid grid-cols-2 gap-4 mb-4">
                                <div>
                                    <p class="text-gray-500 text-sm font-medium">Họ Tên</p>
                                    <p class="text-lg font-semibold text-gray-900">NGUYEN VAN A</p>
                                </div>
                                <div>
                                    <p class="text-gray-500 text-sm font-medium">Hạng Ghế</p>
                                    <p class="text-lg font-semibold text-gray-900">Economy</p>
                                </div>
                            </div>

                            <div class="grid grid-cols-3 gap-4">
                                <div>
                                    <p class="text-gray-500 text-sm font-medium">Cổng</p>
                                    <p class="text-xl font-bold text-blue-600">A12</p>
                                </div>
                                <div>
                                    <p class="text-gray-500 text-sm font-medium">Số Ghế</p>
                                    <p class="text-xl font-bold text-blue-600">15A</p>
                                </div>
                                <div>
                                    <p class="text-gray-500 text-sm font-medium">Giờ Bay</p>
                                    <p class="text-lg font-semibold text-gray-900">14:30</p>
                                </div>
                            </div>
                        </div>

                        <!-- QR Code -->
                        <div class="border-t border-gray-200 pt-4 mb-6">
                            <div class="flex justify-center">
                                <div class="bg-gray-100 p-4 rounded-lg">
                                    <img src="https://api.qrserver.com/v1/create-qr-code/?size=120x120&data=VN123-NGUYEN-VAN-A-15A-A12" alt="QR Code" class="w-24 h-24">
                                </div>
                            </div>
                            <p class="text-center text-gray-500 text-xs mt-2">Quét mã QR để check-in</p>
                        </div>

                        <!-- Action Buttons -->
                        <div class="space-y-3">
                            <button class="w-full bg-blue-600 hover:bg-blue-700 text-white font-semibold py-3 px-4 rounded-lg transition duration-200 flex items-center justify-center">
                                <i class="fas fa-download mr-2"></i>
                                Tải Thẻ
                            </button>
                            <button class="w-full bg-gray-100 hover:bg-gray-200 text-gray-700 font-semibold py-3 px-4 rounded-lg transition duration-200 flex items-center justify-center">
                                <i class="fas fa-envelope mr-2"></i>
                                Gửi Qua Email
                            </button>
                        </div>

                        <!-- Important Notice -->
                        <div class="mt-6 bg-yellow-50 border border-yellow-200 rounded-lg p-3">
                            <div class="flex items-start">
                                <i class="fas fa-exclamation-triangle text-yellow-600 mt-0.5 mr-2"></i>
                                <div>
                                    <p class="text-yellow-800 text-sm font-medium">Lưu ý quan trọng:</p>
                                    <p class="text-yellow-700 text-xs mt-1">Vui lòng có mặt tại cổng lên máy bay trước 30 phút</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Additional Info -->
                <div class="mt-4 text-center text-gray-500 text-sm">
                    <p>Booking Reference: <span class="font-semibold">ABC123XYZ</span></p>
                </div>
            </div>
            <button onclick="goBack()" class="w-full border border-gray-300 text-gray-700 hover:bg-gray-50 font-semibold py-3 px-6 rounded-lg transition duration-200">
                Quay lại
            </button>
        </div>
    </div>
    <script>
        function showFlightInfo() {
            document.getElementById('search-form').classList.add('hidden');
            document.getElementById('flight-info').classList.remove('hidden');
        }

        function confirmCheckin() {
            document.getElementById('flight-info').classList.add('hidden');
            document.getElementById('boarding-pass').classList.remove('hidden');
        }

        function goBack() {
            document.getElementById('search-form').classList.remove('hidden');
            document.getElementById('flight-info').classList.add('hidden');
            document.getElementById('boarding-pass').classList.add('hidden');
        }
    </script>