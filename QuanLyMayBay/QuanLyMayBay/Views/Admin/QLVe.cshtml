    <script>
        // Filter functionality
        document.querySelectorAll('.filter-btn').forEach(btn => {
            btn.addEventListener('click', function () {
                // Remove active class from all buttons
                document.querySelectorAll('.filter-btn').forEach(b => b.classList.remove('active', 'bg-blue-100', 'text-blue-700'));

                // Add active class to clicked button
                this.classList.add('active', 'bg-blue-100', 'text-blue-700');

                const status = this.dataset.status;
                const rows = document.querySelectorAll('.ticket-row');

                rows.forEach(row => {
                    if (status === 'all' || row.dataset.status === status) {
                        row.style.display = '';
                    } else {
                        row.style.display = 'none';
                    }
                });
            });
        });

        // Modal functionality
        const ticketModal = document.getElementById('ticketModal');
        const addTicketModal = document.getElementById('addTicketModal');
        const addTicketBtn = document.getElementById('addTicketBtn');
        const closeModal = document.getElementById('closeModal');
        const closeAddModal = document.getElementById('closeAddModal');
        const cancelAdd = document.getElementById('cancelAdd');

        // Open ticket detail modal when clicking on ticket rows
        document.querySelectorAll('.ticket-row').forEach(row => {
            row.addEventListener('click', function () {
                ticketModal.classList.remove('hidden');
            });
        });

        // Open add ticket modal
        addTicketBtn.addEventListener('click', function () {
            addTicketModal.classList.remove('hidden');
        });

        // Close modals
        closeModal.addEventListener('click', function () {
            ticketModal.classList.add('hidden');
        });

        closeAddModal.addEventListener('click', function () {
            addTicketModal.classList.add('hidden');
        });

        cancelAdd.addEventListener('click', function () {
            addTicketModal.classList.add('hidden');
        });

        // Close modals when clicking outside
        window.addEventListener('click', function (e) {
            if (e.target === ticketModal) {
                ticketModal.classList.add('hidden');
            }
            if (e.target === addTicketModal) {
                addTicketModal.classList.add('hidden');
            }
        });
    </script>
